{
  "name": "@xtitan/theme",
  "version": "0.0.0",
  "description": "Design tokens for XTitan applications",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -w -p tsconfig.json",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@xtitan/config": "workspace:*",
    "typescript": "^5.7.2"
  },
  "files": [
    "dist"
  ]
}
