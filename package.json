{
  "name": "@xtitan/monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "XTitan - Cross-platform monorepo (Web, Android, iOS)",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  },
  "keywords": [
    "monorepo",
    "react",
    "react-native",
    "expo",
    "vite",
    "typescript"
  ],
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
